<div class="archivist-chat">
    <style>
        .archivist-chat {
            display: flex;
            flex-direction: column;
            height: 100%;
            gap: 6px;
            font-size: 12px;
        }

        .messages {
            flex: 1;
            overflow: auto;
            border: 1px solid var(--arch-border, rgba(255, 255, 255, .12));
            border-radius: 6px;
            padding: 6px;
            background: var(--arch-panel, rgba(255, 255, 255, .03));
        }

        .msg {
            margin: 8px 0;
            display: grid;
            grid-template-columns: 1fr;
            /* header on its own row, bubble below */
            gap: 4px;
            align-items: start;
        }

        .msg .from {
            font-weight: 600;
            color: var(--arch-text-muted);
        }

        .msg .bubble {
            background: var(--arch-bg-alt);
            border: 1px solid var(--arch-border);
            border-radius: 6px;
            padding: 6px;
            color: var(--arch-text);
            white-space: pre-wrap;
        }

        .msg .bubble :where(p, ul, ol) {
            margin: 0 0 0.5em 0;
        }

        .msg .bubble ul {
            padding-left: 1.25em;
            list-style: disc;
        }

        .msg .bubble ol {
            padding-left: 1.25em;
            list-style: decimal;
        }

        .msg .bubble code {
            background: rgba(0, 0, 0, .06);
            padding: 0 .2em;
            border-radius: 3px;
        }

        .msg .bubble pre {
            background: rgba(0, 0, 0, .06);
            padding: .5em;
            border-radius: 6px;
            overflow: auto;
        }

        .msg .bubble blockquote {
            border-left: 3px solid var(--arch-border);
            margin: 0 0 .5em;
            padding: .25em .5em;
            color: var(--arch-text-muted);
        }

        .composer {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 6px;
            align-items: center;
        }

        .composer .ask-input {
            flex: 1;
            min-height: 32px;
            padding: 6px 10px;
            border-radius: 6px;
            border: 1px solid var(--arch-border);
            background: var(--arch-panel);
            color: var(--arch-text);
            font-size: 12px;
        }

        .composer .ask-input::placeholder {
            color: var(--arch-text-muted);
        }

        .composer .send-btn {
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            border: 1px solid var(--arch-border);
            background: var(--arch-panel);
            color: var(--arch-text);
            cursor: pointer;
        }

        .typing .dot {
            display: inline-block;
            animation: blink 1.2s infinite ease-in-out;
            margin-right: 2px;
            color: var(--arch-text-muted);
            font-size: 16px;
        }

        .typing .dot:nth-child(2) {
            animation-delay: .2s;
        }

        .typing .dot:nth-child(3) {
            animation-delay: .4s;
        }

        @keyframes blink {

            0%,
            80%,
            100% {
                opacity: 0.2;
            }

            40% {
                opacity: 1;
            }
        }
    </style>
    <div class="messages">
        {{#each messages}}
        <div class="msg">
            <div class="from" style="display:flex; align-items:center; gap:6px; opacity:.9;">
                {{#if (eq this.role 'assistant')}}<i class="archivist-icon" style="font-size:14px;"></i>{{/if}}
                <span>{{#if (eq this.role 'user')}}{{localize 'ARCHIVIST_SYNC.chat.me'}}{{else}}{{localize
                    'ARCHIVIST_SYNC.chat.assistant'}}{{/if}}</span>
            </div>
            <div class="bubble">
                {{#if this.typing}}
                <span class="typing"><span class="dot">•</span><span class="dot">•</span><span
                        class="dot">•</span></span>
                {{else}}
                {{{this.html}}}{{^this.html}}{{this.content}}{{/this.html}}
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    <div style="display:flex; justify-content:flex-end; gap:6px;">
        <button type="button" class="btn chat-clear-btn" title="{{localize 'ARCHIVIST_SYNC.chat.clear'}}">
            <i class="fas fa-trash"></i> {{localize 'ARCHIVIST_SYNC.chat.clear'}}
        </button>
    </div>
    <form class="composer ask-form">
        <input class="ask-input" type="text" placeholder="{{placeholder}}" />
        <button type="submit" class="send-btn" title="{{localize 'ARCHIVIST_SYNC.chat.send'}}">
            <i class="fas fa-paper-plane"></i>
        </button>
    </form>
</div>