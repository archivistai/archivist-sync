<div class="archivist-chat">
    <style>
        .archivist-chat {
            display: flex;
            flex-direction: column;
            height: 100%;
            gap: 8px;
        }

        .messages {
            flex: 1;
            overflow: auto;
            border: 1px solid var(--arch-border, rgba(255, 255, 255, .12));
            border-radius: 8px;
            padding: 8px;
            background: var(--arch-panel, rgba(255, 255, 255, .03));
        }

        .msg {
            margin-bottom: 8px;
            display: grid;
            grid-template-columns: 80px 1fr;
            gap: 8px;
            align-items: start;
        }

        .msg .from {
            font-weight: 600;
            color: #374151;
            /* force dark text for parchment bg */
        }

        .msg .bubble {
            background: rgba(255, 255, 255, .86);
            border: 1px solid rgba(0, 0, 0, .12);
            border-radius: 8px;
            padding: 8px;
            color: #1f2937;
            /* force dark readable text */
            white-space: pre-wrap;
        }

        .composer {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 8px;
            align-items: center;
        }

        .composer .ask-input {
            flex: 1;
            min-height: 44px;
            padding: 8px 12px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            background: #ffffff;
            color: #111827;
            /* force dark input text */
            font-size: 14px;
        }

        .composer .ask-input::placeholder {
            color: #9ca3af;
            /* neutral placeholder */
        }

        .composer .send-btn {
            width: 44px;
            height: 44px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            background: #ffffff;
            color: #374151;
            /* neutral icon color */
            cursor: pointer;
        }

        .typing .dot {
            display: inline-block;
            animation: blink 1.2s infinite ease-in-out;
            margin-right: 2px;
            color: #6b7280;
            font-size: 16px;
        }

        .typing .dot:nth-child(2) {
            animation-delay: .2s;
        }

        .typing .dot:nth-child(3) {
            animation-delay: .4s;
        }

        @keyframes blink {

            0%,
            80%,
            100% {
                opacity: 0.2;
            }

            40% {
                opacity: 1;
            }
        }
    </style>
    <div class="messages">
        {{#each messages}}
        <div class="msg">
            <div class="from">{{#if (eq this.role 'user')}}{{localize 'ARCHIVIST_SYNC.chat.me'}}{{else}}{{localize
                'ARCHIVIST_SYNC.chat.assistant'}}{{/if}}</div>
            <div class="bubble">
                {{#if this.typing}}
                <span class="typing"><span class="dot">•</span><span class="dot">•</span><span
                        class="dot">•</span></span>
                {{else}}
                {{{this.html}}}{{^this.html}}{{this.content}}{{/this.html}}
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    <div style="display:flex; justify-content:flex-end; gap:8px;">
        <button type="button" class="btn chat-clear-btn" title="{{localize 'ARCHIVIST_SYNC.chat.clear'}}">
            <i class="fas fa-trash"></i> {{localize 'ARCHIVIST_SYNC.chat.clear'}}
        </button>
    </div>
    <form class="composer ask-form">
        <input class="ask-input" type="text" placeholder="{{placeholder}}" />
        <button type="submit" class="send-btn" title="{{localize 'ARCHIVIST_SYNC.chat.send'}}">
            <i class="fas fa-paper-plane"></i>
        </button>
    </form>
</div>