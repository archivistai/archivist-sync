<form class="archivist-world-setup" autocomplete="off">
    <div class="archivist-world-setup-root campaign-codex">
        <style>
            /* Default (Dark Theme) */
            .world-setup-dialog {
                --setup-primary: #4a90e2;
                --setup-success: #47d16a;
                --setup-warning: #ffb020;
                --setup-danger: #dc3545;
                --setup-bg: rgba(35, 38, 44, 1);
                --setup-bg-alt: rgba(42, 45, 51, 1);
                --setup-border: rgba(255, 255, 255, 0.12);
                --setup-text: #e8e8e8;
                --setup-text-muted: #b9b9b9;
                --setup-panel: rgba(255, 255, 255, 0.03);
            }

            /* Light mode disabled: always use dark palette */

            .world-setup-dialog .window-content {
                padding: 0;
                background: var(--cc-main-bg);
            }

            .setup-header {
                background: var(--cc-accent80);
                color: var(--cc-main-text);
                padding: 20px;
                text-align: center;
            }

            .setup-header h2 {
                margin: 0 0 10px 0;
                font-size: 24px;
                font-weight: 600;
            }

            .setup-header p {
                margin: 0;
                opacity: 0.9;
                font-size: 14px;
            }

            .progress-container {
                background: color-mix(in srgb, var(--cc-border), transparent 70%);
                height: 4px;
                margin-top: 15px;
                border-radius: 2px;
                overflow: hidden;
            }

            .progress-fill {
                background: var(--cc-accent);
                height: 100%;
                transition: width 0.3s ease;
                border-radius: 2px;
            }

            /* Step 3: ensure campaign select has adequate height and readable options */
            .world-setup-dialog #campaign-select {
                min-height: 44px;
                line-height: 1.4;
                padding: 10px 12px;
            }

            .world-setup-dialog #campaign-select option {
                padding: 8px 10px;
                line-height: 1.5;
            }

            /* Step 4: ensure all select elements have adequate height and readable options */
            .world-setup-dialog .setup-form-group select {
                min-height: 44px;
                line-height: 1.4;
                padding: 10px 12px;
            }

            .world-setup-dialog .setup-form-group select option {
                padding: 8px 10px;
                line-height: 1.5;
            }

            .setup-content {
                padding: 16px;
                min-height: 300px;
                display: flex;
                flex-direction: column;
            }

            .step-indicator {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 10px;
                margin-bottom: 30px;
            }

            .step-number {
                width: 30px;
                height: 30px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: 600;
                font-size: 14px;
                background: var(--setup-border);
                color: var(--setup-text);
            }

            .step-number.active {
                background: var(--setup-primary);
                color: var(--setup-bg);
            }

            .step-number.completed {
                background: var(--setup-success);
                color: var(--setup-bg);
            }

            .step-content {
                flex: 1;
                display: flex;
                flex-direction: column;
                gap: 20px;
            }

            .step-title {
                font-size: 18px;
                font-weight: 600;
                color: var(--cc-main-text);
                margin: 0 0 10px 0;
            }

            .step-description {
                color: var(--cc-text-muted);
                line-height: 1.5;
                margin-bottom: 20px;
            }

            .setup-form-group {
                display: flex;
                flex-direction: column;
                gap: 8px;
            }

            .setup-form-group label {
                font-weight: 600;
                color: var(--cc-main-text);
            }

            .setup-form-group select,
            .setup-form-group input {
                padding: 10px;
                border: 1px solid var(--cc-border);
                border-radius: 4px;
                font-size: 14px;
            }

            .setup-actions {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 16px;
                border-top: 1px solid var(--cc-border);
                background: var(--cc-sidebar-bg);
            }

            .setup-btn {
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.2s ease;
            }

            .setup-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

            .setup-btn.primary {
                background: var(--cc-accent);
                color: white;
            }

            .setup-btn.primary:hover:not(:disabled) {
                background: color-mix(in srgb, var(--cc-accent), black 15%);
            }

            .setup-btn.secondary {
                background: var(--cc-border-light);
                color: var(--cc-main-text);
            }

            .setup-btn.secondary:hover:not(:disabled) {
                background: color-mix(in srgb, var(--cc-border), var(--cc-main-bg) 60%);
            }

            .setup-btn.success {
                background: var(--cc-success);
                color: white;
            }

            .setup-btn.success:hover:not(:disabled) {
                background: color-mix(in srgb, var(--cc-success), black 15%);
            }

            .world-info-box {
                background: var(--cc-ui);
                border: 1px solid var(--cc-border);
                border-radius: 8px;
                padding: 15px;
                margin: 10px 0;
            }

            .world-info-box h4 {
                margin: 0 0 10px 0;
                color: var(--cc-main-text);
            }

            .world-info-box p {
                margin: 5px 0;
                color: #6c757d;
                font-size: 14px;
            }

            .status-indicator {
                display: inline-flex;
                align-items: center;
                gap: 8px;
                padding: 8px 12px;
                border-radius: 4px;
                font-size: 14px;
                font-weight: 600;
            }

            .status-indicator.success {
                background: color-mix(in srgb, var(--cc-success), transparent 90%);
                color: var(--cc-success);
            }

            .status-indicator.warning {
                background: rgba(255, 193, 7, 0.1);
                color: var(--setup-warning);
            }

            .loading-spinner {
                display: inline-block;
                width: 16px;
                height: 16px;
                border: 2px solid var(--cc-border);
                border-top: 2px solid var(--cc-accent);
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

            @keyframes spin {
                0% {
                    transform: rotate(0deg);
                }

                100% {
                    transform: rotate(360deg);
                }
            }

            /* Step 5: Selection rows - equal name/select split and high-contrast visuals */
            .world-setup-dialog .ws-select-row {
                display: flex;
                align-items: center;
                gap: 8px;
                width: 100%;
            }

            .world-setup-dialog .ws-select-row input[type="checkbox"] {
                flex-shrink: 0;
            }

            .world-setup-dialog .ws-select-row .ws-name {
                flex: 1 1 0;
                min-width: 0;
                background: var(--setup-panel) !important;
                color: var(--setup-text) !important;
                border: 1px solid var(--setup-border) !important;
                border-radius: 4px;
                padding: 6px 10px;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                height: 36px;
            }

            .world-setup-dialog .ws-select-row .ws-name img {
                display: inline-block;
                width: 20px;
                height: 20px;
                border-radius: 50%;
                flex-shrink: 0;
            }

            .world-setup-dialog .ws-select-row select {
                flex: 1 1 0;
                min-width: 0;
                background: var(--setup-panel) !important;
                color: var(--setup-text) !important;
                border: 1px solid var(--setup-border) !important;
                border-radius: 4px;
                padding: 6px 10px;
                height: 36px;
                line-height: 1.2;
            }

            /* Step 6: High-contrast progress logs */
            .world-setup-dialog .ws-progress-log {
                max-height: 200px;
                overflow: auto;
                background: var(--cc-ui) !important;
                color: var(--cc-main-text) !important;
                border: 1px solid var(--cc-border) !important;
                padding: 8px;
                border-radius: 6px;
            }

            .world-setup-dialog .ws-progress-log * {
                color: var(--cc-main-text) !important;
                background: transparent !important;
            }

            .world-setup-dialog .ws-progress-log ul {
                margin: 0;
                padding-left: 16px;
            }

            .world-setup-dialog .ws-progress-log li {
                margin: 3px 0;
                line-height: 1.35;
            }

            /* Step 4 Reconciliation: use distinct classes to avoid custom sheet vertical nav styles */
            .world-setup-dialog nav.ws-recon-nav {
                display: flex;
                flex-direction: row;
                gap: 8px;
                border-bottom: 1px solid var(--cc-border);
                margin-bottom: 10px;
            }

            .world-setup-dialog nav.ws-recon-nav .item {
                padding: 8px 12px;
                border-radius: 4px 4px 0 0;
                cursor: pointer;
                background: transparent;
                color: var(--cc-text-muted);
                text-decoration: none;
                transition: background 0.2s ease;
            }

            .world-setup-dialog nav.ws-recon-nav .item:hover {
                background: rgba(255, 255, 255, 0.06);
                color: var(--cc-main-text);
            }

            .world-setup-dialog nav.ws-recon-nav .item.active {
                background: var(--cc-ui);
                color: var(--cc-main-text);
                border: 1px solid var(--cc-border);
                border-bottom-color: transparent;
            }

            .world-setup-dialog .ws-recon-content {
                padding-top: 0;
            }

            .world-setup-dialog .ws-recon-content .tab {
                display: none;
            }

            .world-setup-dialog .ws-recon-content .tab.active {
                display: block;
            }
        </style>

        <div class="setup-header">
            <h2>{{localize "ARCHIVIST_SYNC.worldSetup.title"}}</h2>
            <p>{{localize "ARCHIVIST_SYNC.worldSetup.subtitle"}}</p>
            <div class="progress-container">
                <div class="progress-fill" style="width: {{progressPercentage}}%"></div>
            </div>
        </div>
    </div>

    <div class="setup-content">
        <div class="step-indicator">
            {{#each steps}}
            <div
                class="step-number {{#if (eq this ../currentStep)}}active{{else}}{{#if (lt this ../currentStep)}}completed{{/if}}{{/if}}">
                {{#if (lt this ../currentStep)}}
                <i class="fas fa-check"></i>
                {{else}}
                {{this}}
                {{/if}}
            </div>
            {{#unless @last}}<div
                style="width: 20px; height: 2px; background: {{#if (lt this ../currentStep)}}var(--setup-success){{else}}var(--setup-border){{/if}};">
            </div>{{/unless}}
            {{/each}}
        </div>

        <div class="step-content">
            {{#if isStep1}}
            <!-- Step 1: Welcome -->
            <h3 class="step-title">{{localize "ARCHIVIST_SYNC.worldSetup.step1.title"}}</h3>
            <div class="step-description">
                <p>{{localize "ARCHIVIST_SYNC.worldSetup.step1.description"}}</p>
                <div class="world-info-box">
                    <h4><i class="fas fa-globe"></i> {{foundryWorldTitle}}</h4>
                    {{#if foundryWorldDescription}}
                    <p>{{foundryWorldDescription}}</p>
                    {{/if}}
                    <p><strong>{{localize "ARCHIVIST_SYNC.worldSetup.step1.nextSteps"}}</strong></p>
                    <ul style="margin: 10px 0; padding-left: 20px; color: var(--setup-text);">
                        <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step1.step1"}}</li>
                        <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step1.step2"}}</li>
                        <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step1.step3"}}</li>
                    </ul>
                </div>
                <div style="text-align:center; margin-top: 16px;">
                    <button type="button" data-action="nextStep" class="setup-btn primary">
                        <i class="fas fa-rocket"></i>
                        {{localize "ARCHIVIST_SYNC.worldSetup.buttons.start"}}
                    </button>
                </div>
            </div>
            {{/if}}

            {{!-- Step 4 is Selection (mapping removed) --}}

            {{#if isStep4}}
            <!-- Step 4: Reconcile Foundry and Archivist data -->
            <h3 class="step-title">Reconciliation</h3>
            <div class="step-description">
                <p>Match and select which documents you wish to sync between Foundry and Archivist. If these lists are
                    empty, you can proceed to the next step.</p>
            </div>
            <div class="world-info-box">
                <div style="display:flex; gap:8px; margin-bottom:10px;">
                    <button type="button" class="setup-btn secondary" data-action="prepareSelections" {{#if
                        isLoading}}disabled{{/if}}>
                        {{#if isLoading}}
                        <span class="loading-spinner"></span>
                        Fetching…
                        {{else}}
                        Refresh
                        {{/if}}
                    </button>
                </div>

                {{#if isLoading}}
                <div
                    style="display:flex; flex-direction:column; align-items:center; justify-content:center; gap:12px; padding:40px 20px; color: var(--setup-text);">
                    <span class="loading-spinner" style="width:32px; height:32px; border-width:3px;"></span>
                    <span style="font-size:16px;">Loading reconciliation data…</span>
                    <span style="font-size:14px; opacity:0.75;">Fetching Archivist and Foundry documents</span>
                </div>
                {{else}}
                {{#unless setupData.hasAnyCandidates}}
                <div
                    style="padding:8px; border:1px solid var(--cc-border); border-radius:6px; color: var(--setup-text); background: var(--setup-panel);">
                    No Foundry or Archivist candidates detected. You can proceed to the next step.
                </div>
                {{/unless}}

                {{#if setupData.hasAnyCandidates}}
                <nav class="ws-recon-nav tabs" data-group="recon">
                    <a class="item" data-tab="characters">Characters</a>
                    <a class="item" data-tab="items">Items</a>
                    <a class="item" data-tab="locations">Locations</a>
                </nav>

                <main class="ws-recon-content">
                    {{!-- Characters Tab --}}
                    <section class="tab" data-tab="characters">
                        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:12px;">
                            <div>
                                <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                                    <input type="checkbox" data-action="recon-select-all-toggle" data-tab="characters"
                                        data-side="archivist" />
                                    <span style="padding:6px 10px;">Archivist Characters</span>
                                    <span style="padding:6px 10px;">Match</span>
                                </div>
                                {{#if setupData.reconcile.characters.archivist.length}}
                                <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                                    {{#each setupData.reconcile.characters.archivist}}
                                    <li class="ws-select-row">
                                        <input type="checkbox" data-action="recon-toggle-select" data-tab="characters"
                                            data-side="archivist" data-id="{{this.id}}" {{#if
                                            this.selected}}checked{{/if}} />
                                        <span class="ws-name">
                                            {{#if this.img}}<img src="{{this.img}}"
                                                style="width:20px; height:20px; border-radius:50%; vertical-align:middle; margin-right:6px;" />{{/if}}
                                            {{this.name}}
                                        </span>
                                        <select data-action="recon-change-match" data-tab="characters"
                                            data-side="archivist" data-id="{{this.id}}">
                                            <option value="NA" {{#unless this.match}}selected{{/unless}}>N/A</option>
                                            {{#each @root.setupData.reconcile.characters.foundry}}
                                            <option value="{{this.id}}" {{#if (eq ../match this.id)}}selected{{/if}}
                                                {{#if (and this.match (not (eq this.match ../id)))}}disabled{{/if}}>
                                                {{this.name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{else}}
                                <div
                                    style="padding:12px; text-align:center; color:var(--cc-text-muted); font-style:italic; background:var(--setup-panel); border:1px solid var(--setup-border); border-radius:4px;">
                                    No Archivist characters found
                                </div>
                                {{/if}}
                            </div>
                            <div>
                                <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                                    <input type="checkbox" data-action="recon-select-all-toggle" data-tab="characters"
                                        data-side="foundry" />
                                    <span style="padding:6px 10px;">Foundry Actors</span>
                                    <span style="padding:6px 10px;">Match</span>
                                </div>
                                {{#if setupData.reconcile.characters.foundry.length}}
                                <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                                    {{#each setupData.reconcile.characters.foundry}}
                                    <li class="ws-select-row">
                                        <input type="checkbox" data-action="recon-toggle-select" data-tab="characters"
                                            data-side="foundry" data-id="{{this.id}}" {{#if
                                            this.selected}}checked{{/if}} />
                                        <span class="ws-name">
                                            {{#if this.img}}<img src="{{this.img}}"
                                                style="width:20px; height:20px; border-radius:50%; vertical-align:middle; margin-right:6px;" />{{/if}}
                                            {{this.name}}
                                        </span>
                                        <select data-action="recon-change-match" data-tab="characters"
                                            data-side="foundry" data-id="{{this.id}}">
                                            <option value="NA" {{#unless this.match}}selected{{/unless}}>N/A</option>
                                            {{#each @root.setupData.reconcile.characters.archivist}}
                                            <option value="{{this.id}}" {{#if (eq ../match this.id)}}selected{{/if}}
                                                {{#if (and this.match (not (eq this.match ../id)))}}disabled{{/if}}>
                                                {{this.name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{else}}
                                <div
                                    style="padding:12px; text-align:center; color:var(--cc-text-muted); font-style:italic; background:var(--setup-panel); border:1px solid var(--setup-border); border-radius:4px;">
                                    No Foundry actors found
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </section>

                    {{!-- Items Tab --}}
                    <section class="tab" data-tab="items">
                        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:12px;">
                            <div>
                                <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                                    <input type="checkbox" data-action="recon-select-all-toggle" data-tab="items"
                                        data-side="archivist" />
                                    <span style="padding:6px 10px;">Archivist Items</span>
                                    <span style="padding:6px 10px;">Match</span>
                                </div>
                                {{#if setupData.reconcile.items.archivist.length}}
                                <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                                    {{#each setupData.reconcile.items.archivist}}
                                    <li class="ws-select-row">
                                        <input type="checkbox" data-action="recon-toggle-select" data-tab="items"
                                            data-side="archivist" data-id="{{this.id}}" {{#if
                                            this.selected}}checked{{/if}} />
                                        <span class="ws-name">{{#if this.img}}<img src="{{this.img}}"
                                                style="width:20px; height:20px; border-radius:50%; vertical-align:middle; margin-right:6px;" />{{/if}}{{this.name}}</span>
                                        <select data-action="recon-change-match" data-tab="items" data-side="archivist"
                                            data-id="{{this.id}}">
                                            <option value="NA" {{#unless this.match}}selected{{/unless}}>N/A</option>
                                            {{#each @root.setupData.reconcile.items.foundry}}
                                            <option value="{{this.id}}" {{#if (eq ../match this.id)}}selected{{/if}}
                                                {{#if (and this.match (not (eq this.match ../id)))}}disabled{{/if}}>
                                                {{this.name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{else}}
                                <div
                                    style="padding:12px; text-align:center; color:var(--cc-text-muted); font-style:italic; background:var(--setup-panel); border:1px solid var(--setup-border); border-radius:4px;">
                                    No Archivist items found
                                </div>
                                {{/if}}
                            </div>
                            <div>
                                <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                                    <input type="checkbox" data-action="recon-select-all-toggle" data-tab="items"
                                        data-side="foundry" />
                                    <span style="padding:6px 10px;">Foundry Items</span>
                                    <span style="padding:6px 10px;">Match</span>
                                </div>
                                {{#if setupData.reconcile.items.foundry.length}}
                                <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                                    {{#each setupData.reconcile.items.foundry}}
                                    <li class="ws-select-row">
                                        <input type="checkbox" data-action="recon-toggle-select" data-tab="items"
                                            data-side="foundry" data-id="{{this.id}}" {{#if
                                            this.selected}}checked{{/if}} />
                                        <span class="ws-name">{{#if this.img}}<img src="{{this.img}}"
                                                style="width:20px; height:20px; border-radius:50%; vertical-align:middle; margin-right:6px;" />{{/if}}{{this.name}}</span>
                                        <select data-action="recon-change-match" data-tab="items" data-side="foundry"
                                            data-id="{{this.id}}">
                                            <option value="NA" {{#unless this.match}}selected{{/unless}}>N/A</option>
                                            {{#each @root.setupData.reconcile.items.archivist}}
                                            <option value="{{this.id}}" {{#if (eq ../match this.id)}}selected{{/if}}
                                                {{#if (and this.match (not (eq this.match ../id)))}}disabled{{/if}}>
                                                {{this.name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{else}}
                                <div
                                    style="padding:12px; text-align:center; color:var(--cc-text-muted); font-style:italic; background:var(--setup-panel); border:1px solid var(--setup-border); border-radius:4px;">
                                    No Foundry items found
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </section>

                    {{!-- Locations Tab --}}
                    <section class="tab" data-tab="locations">
                        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:12px;">
                            <div>
                                <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                                    <input type="checkbox" data-action="recon-select-all-toggle" data-tab="locations"
                                        data-side="archivist" />
                                    <span style="padding:6px 10px;">Archivist Locations</span>
                                    <span style="padding:6px 10px;">Match</span>
                                </div>
                                {{#if setupData.reconcile.locations.archivist.length}}
                                <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                                    {{#each setupData.reconcile.locations.archivist}}
                                    <li class="ws-select-row">
                                        <input type="checkbox" data-action="recon-toggle-select" data-tab="locations"
                                            data-side="archivist" data-id="{{this.id}}" {{#if
                                            this.selected}}checked{{/if}} />
                                        <span class="ws-name">{{#if this.img}}<img src="{{this.img}}"
                                                style="width:20px; height:20px; border-radius:50%; vertical-align:middle; margin-right:6px;" />{{/if}}{{this.name}}</span>
                                        <select data-action="recon-change-match" data-tab="locations"
                                            data-side="archivist" data-id="{{this.id}}">
                                            <option value="NA" {{#unless this.match}}selected{{/unless}}>N/A</option>
                                            {{#each @root.setupData.reconcile.locations.foundry}}
                                            <option value="{{this.id}}" {{#if (eq ../match this.id)}}selected{{/if}}
                                                {{#if (and this.match (not (eq this.match ../id)))}}disabled{{/if}}>
                                                {{this.name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{else}}
                                <div
                                    style="padding:12px; text-align:center; color:var(--cc-text-muted); font-style:italic; background:var(--setup-panel); border:1px solid var(--setup-border); border-radius:4px;">
                                    No Archivist locations found
                                </div>
                                {{/if}}
                            </div>
                            <div>
                                <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                                    <input type="checkbox" data-action="recon-select-all-toggle" data-tab="locations"
                                        data-side="foundry" />
                                    <span style="padding:6px 10px;">Foundry Scenes</span>
                                    <span style="padding:6px 10px;">Match</span>
                                </div>
                                {{#if setupData.reconcile.locations.foundry.length}}
                                <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                                    {{#each setupData.reconcile.locations.foundry}}
                                    <li class="ws-select-row">
                                        <input type="checkbox" data-action="recon-toggle-select" data-tab="locations"
                                            data-side="foundry" data-id="{{this.id}}" {{#if
                                            this.selected}}checked{{/if}} />
                                        <span class="ws-name">{{#if this.img}}<img src="{{this.img}}"
                                                style="width:20px; height:20px; border-radius:50%; vertical-align:middle; margin-right:6px;" />{{/if}}{{this.name}}</span>
                                        <select data-action="recon-change-match" data-tab="locations"
                                            data-side="foundry" data-id="{{this.id}}">
                                            <option value="NA" {{#unless this.match}}selected{{/unless}}>N/A</option>
                                            {{#each @root.setupData.reconcile.locations.archivist}}
                                            <option value="{{this.id}}" {{#if (eq ../match this.id)}}selected{{/if}}
                                                {{#if (and this.match (not (eq this.match ../id)))}}disabled{{/if}}>
                                                {{this.name}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{else}}
                                <div
                                    style="padding:12px; text-align:center; color:var(--cc-text-muted); font-style:italic; background:var(--setup-panel); border:1px solid var(--setup-border); border-radius:4px;">
                                    No Foundry scenes found
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </section>

                </main>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}

            {{#if isStep5}}
            <!-- Step 5: Choose Foundry Objects to Create -->
            <h3 class="step-title">Create Foundry Objects</h3>
            <div class="step-description">
                <p>Select which Foundry core objects we should create for unmatched Archivist documents you chose to
                    import in the previous step.</p>
            </div>
            <div class="world-info-box">
                <nav class="ws-recon-nav tabs" data-group="create">
                    <a class="item" data-tab="actors">Characters</a>
                    <a class="item" data-tab="items">Items</a>
                    <a class="item" data-tab="scenes">Locations</a>
                </nav>
                <main class="ws-recon-content">
                    <section class="tab" data-tab="actors">
                        {{#if hasCreateCandidates.actors}}
                        <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                            <input type="checkbox" data-action="createSelectAll" data-kind="actors" />
                            <span style="padding:6px 10px;">Archivist Characters (no matching Actor)</span>
                        </div>
                        <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                            {{#each @root.setupData.reconcile.characters.archivist}}
                            {{#if (and this.selected (not this.match))}}
                            <li class="ws-select-row">
                                <input type="checkbox" data-action="toggleCreateChoice" data-kind="actors"
                                    data-id="{{this.id}}" {{#if (lookup @root.createFoundryMap.actors
                                    this.id)}}checked{{/if}} />
                                <span class="ws-name">{{#if this.img}}<img
                                        src="{{this.img}}" />{{/if}}{{this.name}}</span>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                        {{else}}
                        <div style="padding:20px; text-align:center; color:var(--cc-text-muted); font-style:italic;">
                            No unmatched Archivist characters to create
                        </div>
                        {{/if}}
                    </section>
                    <section class="tab" data-tab="items">
                        {{#if hasCreateCandidates.items}}
                        <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                            <input type="checkbox" data-action="createSelectAll" data-kind="items" />
                            <span style="padding:6px 10px;">Archivist Items (no matching Item)</span>
                        </div>
                        <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                            {{#each @root.setupData.reconcile.items.archivist}}
                            {{#if (and this.selected (not this.match))}}
                            <li class="ws-select-row">
                                <input type="checkbox" data-action="toggleCreateChoice" data-kind="items"
                                    data-id="{{this.id}}" {{#if (lookup @root.createFoundryMap.items
                                    this.id)}}checked{{/if}} />
                                <span class="ws-name">{{#if this.img}}<img
                                        src="{{this.img}}" />{{/if}}{{this.name}}</span>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                        {{else}}
                        <div style="padding:20px; text-align:center; color:var(--cc-text-muted); font-style:italic;">
                            No unmatched Archivist items to create
                        </div>
                        {{/if}}
                    </section>
                    <section class="tab" data-tab="scenes">
                        {{#if hasCreateCandidates.scenes}}
                        <div class="ws-select-row" style="font-weight:600; margin-bottom:6px;">
                            <input type="checkbox" data-action="createSelectAll" data-kind="scenes" />
                            <span style="padding:6px 10px;">Archivist Locations (no matching Scene)</span>
                        </div>
                        <ul style="list-style:none; padding:0; margin:0; display:grid; gap:6px;">
                            {{#each @root.setupData.reconcile.locations.archivist}}
                            {{#if (and this.selected (not this.match))}}
                            <li class="ws-select-row">
                                <input type="checkbox" data-action="toggleCreateChoice" data-kind="scenes"
                                    data-id="{{this.id}}" {{#if (lookup @root.createFoundryMap.scenes
                                    this.id)}}checked{{/if}} />
                                <span class="ws-name">{{#if this.img}}<img
                                        src="{{this.img}}" />{{/if}}{{this.name}}</span>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                        {{else}}
                        <div style="padding:20px; text-align:center; color:var(--cc-text-muted); font-style:italic;">
                            No unmatched Archivist locations to create
                        </div>
                        {{/if}}
                    </section>
                </main>
                <div style="display:flex; gap:8px; justify-content:flex-end; margin-top:10px;">
                    <button type="button" class="setup-btn secondary" data-action="createSelectNone"
                        data-kind="actors">Clear Characters</button>
                    <button type="button" class="setup-btn secondary" data-action="createSelectNone"
                        data-kind="items">Clear Items</button>
                    <button type="button" class="setup-btn secondary" data-action="createSelectNone"
                        data-kind="scenes">Clear Locations</button>
                </div>
            </div>
            {{/if}}

            {{#if isStep6}}
            <!-- Step 6: Summary + Begin Sync -->
            <h3 class="step-title">{{localize "ARCHIVIST_SYNC.worldSetup.summary.title"}}</h3>
            <div class="step-description">
                <p>{{localize "ARCHIVIST_SYNC.worldSetup.summary.description"}}</p>
            </div>
            <div class="world-info-box">
                <p>{{localize "ARCHIVIST_SYNC.worldSetup.summary.placeholder"}}</p>
                {{#if summaryRows}}
                <table style="width:100%; border-collapse: collapse; margin: 8px 0;">
                    <thead>
                        <tr>
                            <th style="text-align:left; padding:6px; border-bottom:1px solid var(--cc-border);">Type
                            </th>
                            <th style="text-align:center; padding:6px; border-bottom:1px solid var(--cc-border);">Import
                                from Archivist</th>
                            <th style="text-align:center; padding:6px; border-bottom:1px solid var(--cc-border);">Create
                                in Foundry</th>
                            <th style="text-align:center; padding:6px; border-bottom:1px solid var(--cc-border);">Export
                                to Archivist</th>
                            <th style="text-align:center; padding:6px; border-bottom:1px solid var(--cc-border);">Linked
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each summaryRows}}
                        <tr>
                            <td style="padding:6px;">{{this.key}}</td>
                            <td style="text-align:center; padding:6px;">{{this.fromArchivist}}</td>
                            <td style="text-align:center; padding:6px;">{{#if
                                this.createFoundry}}{{this.createFoundry}}{{else}}0{{/if}}</td>
                            <td style="text-align:center; padding:6px;">{{#if
                                this.noteNoExport}}—{{else}}{{this.toArchivist}}{{/if}}</td>
                            <td style="text-align:center; padding:6px;">{{#if
                                this.noteNoExport}}—{{else}}{{this.linked}}{{/if}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}
                {{#if syncStatus.total}}
                <div style="margin:8px 0;">
                    <div
                        style="height:6px; background:var(--setup-bg-alt); position:relative; border-radius:3px; overflow:hidden;">
                        <div
                            style="position:absolute; left:0; top:0; bottom:0; width: {{syncStatusPct}}%; background: var(--setup-primary);">
                        </div>
                    </div>
                    <small>{{syncStatus.processed}} / {{syncStatus.total}} — {{syncStatus.current}}</small>
                </div>
                {{/if}}
                {{#if syncStatus.logs}}
                <div class="ws-progress-log">
                    <ul>
                        {{#each syncStatus.logs}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
                <div style="text-align:right;">
                    <button type="button" class="setup-btn success" data-action="beginSync" {{#if
                        isLoading}}disabled{{/if}}>{{localize
                        "ARCHIVIST_SYNC.worldSetup.summary.beginSync"}}</button>
                </div>
            </div>
            {{/if}}
            {{#if isStep2}}
            <!-- Step 2: API Key Entry -->
            <h3 class="step-title">{{localize "ARCHIVIST_SYNC.worldSetup.step2.title"}}</h3>
            <div class="step-description">
                <p>{{localize "ARCHIVIST_SYNC.worldSetup.step2.description"}}</p>
            </div>

            <div class="world-info-box">
                <h4><i class="fas fa-key" style="color: #ffc107;"></i> {{localize
                    "ARCHIVIST_SYNC.worldSetup.step2.getApiKey"}}</h4>
                <p>{{localize "ARCHIVIST_SYNC.worldSetup.step2.noKeyYet"}}</p>
                <ol style="margin: 10px 0; padding-left: 20px; color: var(--setup-text);">
                    <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step2.step1"}}</li>
                    <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step2.step2"}}</li>
                    <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step2.step3"}}</li>
                    <li style="color: var(--setup-text);">{{localize "ARCHIVIST_SYNC.worldSetup.step2.step4"}}</li>
                </ol>
                <div
                    style="background: color-mix(in srgb, var(--setup-warning), transparent 85%); border: 1px solid var(--setup-warning); border-radius: 4px; padding: 10px; margin: 10px 0;">
                    <strong style="color: var(--setup-warning);">⚠️ {{localize
                        "ARCHIVIST_SYNC.worldSetup.step2.permissionsWarning"}}</strong>
                    <p style="margin: 5px 0 0 0; color: var(--setup-warning); font-size: 14px;">{{localize
                        "ARCHIVIST_SYNC.worldSetup.step2.permissionsDetails"}}</p>
                </div>
            </div>

            <div class="setup-form-group">
                <label for="api-key-input">{{localize "ARCHIVIST_SYNC.worldSetup.step2.enterKey"}}</label>
                <input type="password" id="api-key-input"
                    placeholder="{{localize 'ARCHIVIST_SYNC.worldSetup.step2.keyPlaceholder'}}"
                    value="{{setupData.apiKey}}" style="font-family: monospace;">
                <div style="display: flex; gap: 10px; align-items: center; margin-top: 10px;">
                    <button type="button" data-action="validateApiKey" class="setup-btn primary" {{#if
                        isValidatingApi}}disabled{{/if}}>
                        {{#if isValidatingApi}}
                        <span class="loading-spinner"></span>
                        {{localize "ARCHIVIST_SYNC.worldSetup.step2.validating"}}
                        {{else}}
                        <i class="fas fa-check"></i>
                        {{localize "ARCHIVIST_SYNC.worldSetup.step2.validateKey"}}
                        {{/if}}
                    </button>
                    {{#if setupData.apiKeyValid}}
                    <div class="status-indicator success">
                        <i class="fas fa-check-circle"></i>
                        {{localize "ARCHIVIST_SYNC.worldSetup.step2.keyValid"}}
                    </div>
                    {{/if}}
                </div>
            </div>
            {{/if}}

            {{#if isStep3}}
            <!-- Step 3: Campaign Selection or Creation -->
            <h3 class="step-title">{{localize "ARCHIVIST_SYNC.worldSetup.step3.title"}}</h3>
            <div class="step-description">
                <p>{{localize "ARCHIVIST_SYNC.worldSetup.step3.description"}}</p>
            </div>

            <div style="display:flex; gap: 10px; align-items:center; margin-bottom: 15px;">
                <button type="button" data-action="loadCampaigns" class="setup-btn secondary" {{#if
                    isLoading}}disabled{{/if}}>
                    {{#if isLoading}}
                    <span class="loading-spinner"></span>
                    {{localize "ARCHIVIST_SYNC.buttons.syncing"}}
                    {{else}}
                    <i class="fas fa-sync"></i>
                    {{localize "ARCHIVIST_SYNC.buttons.syncWorlds"}}
                    {{/if}}
                </button>
                <button type="button" data-action="createCampaign" class="setup-btn secondary" {{#if
                    isLoading}}disabled{{/if}}>
                    <i class="fas fa-plus"></i>
                    {{localize "ARCHIVIST_SYNC.buttons.createWorld"}}
                </button>
            </div>

            {{#if worlds.length}}
            <div class="setup-form-group">
                <label for="campaign-select">{{localize "ARCHIVIST_SYNC.labels.selectWorld"}}</label>
                <select id="campaign-select" name="campaignSelect">
                    <option value="">{{localize "ARCHIVIST_SYNC.options.selectWorld"}}</option>
                    {{#each worlds}}
                    <option value="{{this.id}}" {{#if (eq this.id ../setupData.selectedWorldId)}}selected{{/if}}>
                        {{#if this.name}}{{this.name}}{{else}}{{this.title}}{{/if}}
                    </option>
                    {{/each}}
                </select>
            </div>
            {{/if}}

            {{#if setupData.selectedWorldId}}
            <div class="world-info-box">
                <div class="status-indicator success">
                    <i class="fas fa-check-circle"></i>
                    {{localize "ARCHIVIST_SYNC.worldSetup.step3.worldSelected"}}
                </div>
                <p><strong>{{setupData.selectedWorldName}}</strong></p>
            </div>
            {{/if}}
            {{/if}}

        </div>
    </div>

    <div class="setup-actions">
        <div>
            {{#unless isFirstStep}}
            <button type="button" data-action="prevStep" class="setup-btn secondary">
                <i class="fas fa-arrow-left"></i>
                {{localize "ARCHIVIST_SYNC.worldSetup.buttons.previous"}}
            </button>
            {{/unless}}
        </div>

        <div style="display: flex; gap: 10px;">
            <button type="button" data-action="cancel" class="setup-btn secondary">
                {{localize "ARCHIVIST_SYNC.worldSetup.buttons.cancel"}}
            </button>

            {{#if isLastStep}}
            <button type="button" data-action="completeSetup" class="setup-btn success" {{#unless
                canProceed}}disabled{{/unless}}>
                <i class="fas fa-check"></i>
                {{localize "ARCHIVIST_SYNC.worldSetup.buttons.complete"}}
            </button>
            {{else}}
            <button type="button" data-action="nextStep" class="setup-btn primary" {{#unless
                canProceed}}disabled{{/unless}}>
                {{localize "ARCHIVIST_SYNC.worldSetup.buttons.next"}}
                <i class="fas fa-arrow-right"></i>
            </button>
            {{/if}}
        </div>
    </div>
</form>